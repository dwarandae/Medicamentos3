<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
        
<struts>

    <constant name="struts.devMode" value="true"/>
		
    <package name="index" namespace="/" extends="struts-default">
        <default-interceptor-ref name="validationWorkflowStack"/>
				
        <action name="index">
            <result>/index.jsp</result>
        </action>
				
    </package>
		
    <package name="signUp" namespace="/signUp" extends="struts-default">
		
        <default-interceptor-ref name="validationWorkflowStack"/>
				
        <action name="indexSignUp" class="Presentation.Beans.SignUp" method = "index" >
            <result>/signUp/index.jsp</result>
        </action>	
        
    </package>
    
    <package name="signIn" namespace="/signIn" extends="struts-default">
		
        <default-interceptor-ref name="validationWorkflowStack"/>
				
        <action name="indexSignIn" class="Presentation.Beans.SignIn" method = "index">
            <result>/signIn/index.jsp</result>
        </action>	
        
    </package>
		
</struts>
